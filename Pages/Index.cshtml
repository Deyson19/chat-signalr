@page
@model IndexModel
@{
     ViewData["Title"] = "Chat Page";
}
<h1 class="text-center text-bold text-primary">
     Chat en ASP.NET + SIGNALR
</h1>

<div class="container mt-5">
     <div class="row mb-3">
          <div class="col-sm-6">
               <label for="userInput" class="form-label text-info">Usuario:</label>

               <input type="text" class="form-control" id="userInput" placeholder="Ingresa tu nombre" />
          </div>

          <div class="col-sm-6">
               <label for="messageInput" class="form-label text-info">Mensaje:</label>
               <input type="text" class="form-control" id="messageInput" placeholder="Escribe tu mensaje" />
          </div>
     </div>
     <div class="row mb-4">
          <div class="col-sm-6 text-end">
               <button class="btn btn-success btn-md" id="sendButton">Enviar Mensaje
                    <i class="fas fa-paper-plane"></i>
               </button>
          </div>
     </div>

     <hr />

     <div class="row">
          <div class="col-sm-6">
               <h4 class="text-bold text-success mt-4">Lista De Mensajes</h4>
               <ul id="messagesList" class="list-group mt-3"></ul>
          </div>
     </div>
</div>
